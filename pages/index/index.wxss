page{
  color: #666;
  padding: 0;
}
/* 首页导航 */
.nav_wrap {

}
.nav {
  white-space: nowrap;
  padding: 5rpx 0;
}
.nav_item{
  padding: 20rpx 45rpx;
  font-size: 30rpx;
  display: inline-block;
}
.nav_item_active {
  border-bottom: 5rpx solid #de688b;
}

/* 轮播图 */
.slides{
  height:220rpx;
  margin-top: 10px;
  /* 调整指示点的位置 */
  line-height: 250rpx;
}
.slides navigator{
  width: 100%;
  height: 100%;
}
.slides image{
  width: 100%;
  height: 100%;
}

/* 视频列表 */
.video_wrap{
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 5rpx;
  margin-top: 10px;
}
.video_wrap navigator{
  width: 49%;
  margin-bottom: 10px;
}
.video_wrap navigator image{
  width: 100%;
  border-radius: 15rpx;
}
.video_img{
  position: relative;
}
.video_info{
  width:90%;
  display: flex;
  justify-content: space-between;
  position: absolute;
  bottom: 5%;
  left: 5%;
  color:#fff;
  font-size: 20rpx;
}
.play_count image,.comment_count image{
  vertical-align: middle;
}
.video_title{
  font-size: 30rpx;
  display: -webkit-box;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  line-clamp: 2;
 -webkit-box-orient: vertical;
}